{% extends '@BWSkeleton/Frontend/layout.html.twig' %}

{% block content -%}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Resource list</h1>

                <ul>
                    <li>
                        <a href="{{ path('resource_new') }}">
                            Add
                        </a>
                    </li>
                </ul>

                <table class="records_list">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Heading</th>
                        <th>Description</th>
                        <th>Link</th>
                        <th>Read</th>
                        <th>Liked</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('resource_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.heading }}</td>
                            <td>{{ entity.description }}</td>
                            <td>{{ entity.link }}</td>
                            <td>{{ entity.read }}</td>
                            <td>{{ entity.liked }}</td>
                            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('resource_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('resource_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
